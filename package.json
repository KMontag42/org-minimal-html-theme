{
  "private": true,
  "scripts": {
    "styles": "postcss -u autoprefixer -u postcss-cssnext -c options.json -o dist/bundle.css src/styles/*.css",
    "compress": "cssnano < dist/bundle.css > dist/bundle.min.css",
    "server": "browser-sync start --files dist/bundle.css --server --no-notify --no-open"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "browser-sync": "^2.11.1",
    "cssnano-cli": "^1.0.3",
    "postcss-cli": "^2.5.1",
    "postcss-cssnext": "^2.4.0"
  },
  "dependencies": {}
}
