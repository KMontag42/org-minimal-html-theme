{
  "private": true,
  "scripts": {
    "build": "npm run styles && npm run compress",
    "compress": "npm run compress-styles & npm run compress-scripts",
    "compress-scripts": "uglifyjs src/scripts/*.js -o dist/bundle.min.js -c -m -v --screw-ie8 --stats",
    "compress-styles": "cssnano < dist/bundle.css > dist/bundle.min.css",
    "lint": "stylelint src/styles/*.css && xo src/scripts/*.js --space --env=browser",
    "server": "browser-sync start --files dist/bundle.css --server --no-notify --no-open",
    "start": "npm run watch & npm run server",
    "styles": "postcss -u postcss-import -u postcss-url -u postcss-cssnext -c options.json -o dist/bundle.css src/styles/index.css",
    "test": "npm run lint",
    "watch": "npm run styles -- -w"
  },
  "devDependencies": {
    "browser-sync": "^2.11.1",
    "cssnano-cli": "^1.0.3",
    "postcss-cli": "^2.5.1",
    "postcss-cssnext": "^2.4.0",
    "postcss-import": "^8.0.2",
    "postcss-url": "^5.1.1",
    "stylelint": "^4.4.0",
    "uglify-js": "^2.6.2",
    "xo": "^0.12.1"
  }
}
