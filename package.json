{
  "private": true,
  "scripts": {
    "start": "npm run watch & npm run server",
    "styles": "postcss -u postcss-import -u postcss-cssnext -u autoprefixer -c options.json -o dist/bundle.css src/styles/index.css",
    "compress": "cssnano < dist/bundle.css > dist/bundle.min.css",
    "server": "browser-sync start --files dist/bundle.css --server --no-notify --no-open",
    "watch": "npm run styles -- -w"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "browser-sync": "^2.11.1",
    "cssnano-cli": "^1.0.3",
    "postcss-cli": "^2.5.1",
    "postcss-cssnext": "^2.4.0",
    "postcss-import": "^8.0.2"
  },
  "dependencies": {
    "normalize.css": "^3.0.3"
  }
}
